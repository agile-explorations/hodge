# Hodge Environment Configuration
# Copy this file to .env and fill in your values

# PM Tool Integration
# Options: linear, github, jira
HODGE_PM_TOOL=linear

# Linear Configuration (if using Linear)
# Get your API key from: https://linear.app/settings/api
LINEAR_API_KEY=lin_api_xxxxx
LINEAR_TEAM_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
LINEAR_TEAM_NAME=YourTeamName  # Used by create-linear-project script
LINEAR_PROJECT_ID=  # Optional: specific project ID

# GitHub Configuration (if using GitHub)
GITHUB_TOKEN=ghp_xxxxx
GITHUB_REPO=owner/repo  # Format: owner/repository

# Jira Configuration (if using Jira - not yet implemented)
JIRA_HOST=https://yourcompany.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=xxxxx
JIRA_PROJECT_KEY=PROJ

# Development Settings
NODE_ENV=development
LOG_LEVEL=info  # Options: debug, info, warn, error