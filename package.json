{
  "name": "@agile-explorations/hodge",
  "version": "0.1.0-alpha.1",
  "description": "AI development framework: Freedom to explore, discipline to build, confidence to ship",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "hodge": "./dist/bin/hodge.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/bin/hodge.ts",
    "start": "node dist/bin/hodge.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "cosmiconfig": "^9.0.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "ora": "^8.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@linear/sdk": "^59.1.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "dotenv": "^17.2.2",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "ai",
    "development",
    "claude",
    "cursor",
    "framework",
    "typescript"
  ],
  "author": "Agile Explorations",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agile-explorations/hodge.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
